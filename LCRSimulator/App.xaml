<Application x:Class="LCRGame.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:LCRGame" xmlns:viewModels="clr-namespace:LCRGame.ViewModels"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <viewModels:ViewModelLocator x:Key="Locator" />
            <Style TargetType="{x:Type TextBlock}">
                <Setter Property="FontSize" Value="12" />
                <Setter Property="FontFamily" Value="Verdana" />
            </Style>
            <Style TargetType="{x:Type Control}" x:Key="FontStyling">
                <Setter Property="FontSize" Value="14" />
                <Setter Property="FontFamily" Value="Verdana" />
            </Style>
            <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource FontStyling}" >
                <Setter Property="FontSize" Value="16" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
